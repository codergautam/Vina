<html>

<head>
    <script src="https://cdn.socket.io/socket.io-3.0.1.min.js">
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
</head>

<body>
    <style>
        #getGameName {}
    </style>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Vina</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <span class="navbar-text"></span>
        </div>
    </nav>
    <div id="connecting" style="display: none">
        <marquee width="60%" direction="right" height="100px">Connecting</marquee>
    </div>
    <div id="error" style="display: none">
        <div id="errort" class="alert alert-danger" role="alert">
        </div>
    </div>
    <div id="waiting" style="display: none;">
        <br/>
        <center>
            <h1 id="getGameName">Hosting Game: </h1>
            <h3 id="gameCode"></h3>
            <br>
            <button class="btn btn-success" id="startbtn" disabled>Start Game</button>
            <br>
            <h3>Joined Players:</h3>
            <br>
            <h5 id="players"> </h5>
        </center>
    </div>
    <div id="playing" style="display: none;">
        <h1>Game in Progress</h1>
    </div>
    <script src="/client/hostfunc.js"></script>
    <script>
        <% if(cookie) { %>
        sessionStorage.setItem("authorization", "<%= auth %>")
        sessionStorage.setItem("code", <%= hostdata.code %>)
        <% } else {%>
        if (!(sessionStorage.getItem("authorization") && sessionStorage.getItem("code"))) {
            window.location = "/host"
        }
        <% } %>
        var state = "connecting"
        setState("connecting")
    </script>
    <script src="/client/hostsocket.js">
    </script>
</body>

</html>